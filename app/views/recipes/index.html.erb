
<div class="container-fluid">
	<p id="notice"><%= notice %></p>

	
	<div class="row">

		<!-- Title -->
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
			<h1>Recipe Search</h1>
			Powered by Food2Fork.com
		</div>



		<!-- Search -->
		<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">

			<!-- search field -->
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 spacerTop10px">
				<input type = "text" class="form-control" placeholder="Enter your ingredients: chicken asparagus paprika etc">
			</div>

			<!-- spacer -->
			<div class="col-lg-7 col-md-6 col-sm-0 col-xs-0 spacerTop10px">

			</div>	

			<!-- search button -->
			<div class="col-lg-5 col-md-6 col-sm-12 col-xs-12 spacerTop10px">
				<button type="submit" class="btnRed btn btn-block">Search For Recipes</button>

			</div>	

		</div>

	</div>	

	<br/><br/>
	<div class="row">
		<div class="col-lg-12 col-md- col-sm-12 col-xs-12 text-center">
			<strong><h3>Search Results For "<%= @search_term %>" </h3></strong>
		</div>
	</div>

<% if (@recipes.nil? or @recipes == []) %>
	<p><h2>No recipes found... Sorry</h2></p>

<% else %>

	<!-- Recipe Listing -->
	<div class="card-columns">

		<% @recipes.each do |course| %>

			<div class = "card indexRecipeCard shadowEffect">

				<!-- image -->
						  
				<%= link_to(image_tag(course["image_url"], class: "card-img-top img-responsive text-center", style: "width:100%"), course["f2f_url"])%>			
					
				<!-- recipe name -->
				<div class="card-block indexRecipeTitle text-xs-center">

					<%= link_to(course["title"],course["f2f_url"])%>	

				</div>

									
			
			</div> 
		
		<% end %>
			
	</div> 

<% end %>	

</div>


